PROJECT_NAME=Vehicle Check API
VERSION=1.0.0
API_V1_STR=/api/v1

# Database
DATABASE_URL=mysql+pymysql://user:password@localhost/vehicle_check
DATABASE_TEST_URL=mysql+pymysql://user:password@localhost/vehicle_check_test

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@vehiclecheck.com
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENVIRONMENT=development
